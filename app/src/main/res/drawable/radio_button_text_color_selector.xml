<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked state (when selected) -->
    <item android:color="@android:color/white" android:state_checked="true"/>
    <!-- Hovered state (when being dragged over, but not necessarily checked) -->
    <item android:color="@android:color/white" android:state_hovered="true"/>
    <!-- Default unchecked state -->
    <item android:color="@color/design_default_color_primary"/>
</selector> 